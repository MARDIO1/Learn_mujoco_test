<mujoco model="dart_arena">
    <option timestep="0.01"/>

    <asset>
        <material name="mat_red" rgba="1 0 0 1"/>
        <material name="mat_green" rgba="0 1 0 1" emission="0.8"/>
        <material name="mat_white" rgba="1 1 1 1"/>
        
    </asset>

    <worldbody>
        <!-- 地平面 -->
        <geom name="floor" type="plane" size="100 100 0.1" rgba="0.8 0.8 0.8 1"/>

        <!-- 起始点：红色立方体（正方形） -->
        <!-- 高度0.1m，边长0.4m -->
        <body name="start_point" pos="0 0 0.05">
            <geom type="box" size="0.2 0.2 0.05" material="mat_red"/>
        </body>

        <!-- 指示线（水平白线） -->
        <body name="direction_line"
            pos="13 0 0.05"
            euler="0 90 0">   <!-- 绕Y轴旋转90°，圆柱水平沿X -->
            <geom type="cylinder" size="0.01 13" material="mat_white"/>
        </body>

        <!-- 目标基座 -->
        <body name="target_base" pos="26 0 0.2">
            <!-- 基座立方体 -->
            <geom type="box" size="0.2 0.2 0.2" rgba="0.5 0.3 0.1 1"/>

            <!-- 倾斜目标 -->
            <body name="target" pos="0 0 0.2" euler="15 0 0">
                <geom type="box" size="0.05 0.05 0.005" rgba="0.2 0.2 0.2 1"/>

                <!-- 绿色发光圆（后方0.05m，上方0.05m） -->
                <body name="indicator" pos="0 -0.05 0.05">
                    <geom type="cylinder" size="0.025 0.0025" material="mat_green"/>
                </body>
            </body>
        </body>

        <!-- 固定正交相机 -->
        <camera name="side_cam"
            pos="13 -30 2"
            mode="fixed"
            orthographic="true"
        fovy="30"/>
    </worldbody>
</mujoco>